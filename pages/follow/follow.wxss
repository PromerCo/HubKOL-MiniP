.wrap {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 200rpx;
  border-bottom: 1rpx solid rgb(235,235,235);
  display: flex;
}

.wux-swipe__action {
  background-color: #ddd;
  color: white;

}
.content_left{
  width: 200rpx;
  height: 160rpx;
}
.content_left image{
width: 120rpx;
height: 120rpx;
border-radius: 50%;
margin: 40rpx 30rpx;
}
.content_right {
margin-top: 20rpx;
font-size: 26rpx;

}
.follow{
  margin-top: 30rpx;
  text-align: center;
  border:1rpx solid #ff3300;
  border-radius: 5rpx;
  color: #ff3300;
  line-height: 40rpx;
  width: 100rpx;
}
.follow span{
 font-size: 24rpx;
}
.name{
  margin-top: 30rpx;
}

.page {
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 2rpx solid rgb(235, 235, 235);
}

.tab-item {
  width: 50%;
  text-align: center;
  font-size: 28rpx;
  color: #777;
}

.swiper {
  height: 1100px;
  background: white;
}

.on {
  font-weight: 700;
  color: #f60;
  border-bottom: 5rpx solid #f60;
}
.wux-swipe__action{
  background-color: #FF3300 !important;

}