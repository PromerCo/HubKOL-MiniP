page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.project {
  width: 100%;
  height: 100%;
}

/* 第一部分 产品要求 */

.content {
  width: 100%;
  height: 200rpx;
  margin: 40rpx auto;
  border-bottom:1rpx solid rgb(243, 239, 239);
}
.x_head {
  height: 80rpx;
}
.timg {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.head_text {
  float: left;
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-weight: 700;
  font-size: 28rpx;
}

.data {
margin-top:25rpx;
margin-left:30rpx;
font-size:26rpx;
width:100%;
height:60rpx;
}

.reset_data {
  margin-top: 13rpx;
  margin-left: 20rpx;
  float: left;
  width: 300rpx;
}

.data p {
margin-left:10rpx;
font-size:24rpx;
}

.see {
float:right;
margin-right:90rpx;
border-radius:25rpx;
border:1rpx solid #ccc;
width:155rpx;
height:42rpx;
font-size:24rpx;
line-height:42rpx;
text-align:center;
}

.see:hover {
  color: #970a15;
  border: 1rpx solid #970a15;
}
.publish{
position:fixed;
bottom:50rpx;
right:50rpx;
}

.publish image{
width: 80rpx;
height: 80rpx;
}

.is_excer{
text-align:center;
}

.is_excer image{
  width:300rpx;
height:200rpx;
margin-top:380rpx;
}

.footer{
position:fixed;
bottom:0;
width:100%;
display:flex;
height:100rpx;
line-height:100rpx;
font-size:32rpx;
}
.footer view{
width:100%;
text-align:center;
background:#FF3300;
color:white;
border-top-left-radius:5px;
border-top-right-radius:5px;
}