page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.wrap {
  width: 100%;
}
/* 第一部分 产品要求 */
.content {
  width:95%;
  height:auto;
  margin:20rpx auto;
}
.x_head {
  height: 80rpx;
  line-height:80rpx;
}
.timg {
width:50rpx;
height:50rpx;
float:left;
margin-top:10rpx;
margin-left:10rpx;
border-radius:50%;
}
.head_text {
float:left;
margin-top:-3rpx;
margin-left:30rpx;
font-weight:700;
font-size:28rpx;
}
.head_create_time {
float:right;
margin-right:10px;
font-size:24rpx;
color:gray;
margin-top:-10rpx;
}
.head_content_make{
color:20rpx;
font-size:24rpx;
width:80%;
margin-left:12.1%;
margin-top:-10rpx;
}
.head_content_make span{
margin-top:18rpx;
overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
width:55%;
}
.head_content_make image{
width:26rpx;
height:26rpx;
margin-top:20rpx;
}
.head_content_make view{
  margin-top: 20rpx
}
.genre_content{
font-size:28rpx;
margin-top:30rpx;
line-height:50rpx;
border-bottom:1rpx solid rgb(243, 239, 239);
height:80rpx;
}
.genre_content image{
  width:50rpx;
  height:50rpx;
  margin-left:10rpx;
}
.nickname_left {
margin-left:20rpx;
font-size:24rpx;
position:absolute;
}
.nickname_left image {
width:80rpx;
height:80rpx;
margin-left:30rpx;
float:left;
border-radius:50%;
}
.nickname_left p {
float:left;
margin-left:30rpx;
font-size:24rpx;
width:80%;
height:50rpx;
line-height:50rpx;
margin-top:-3rpx;
}
.nickname_right {
color:gray;
float:right;
font-size:24rpx;
margin-right:20rpx;
}
/* 详细描述 */
.apply_kol_header{
margin-top:20rpx;
}
.apply_kol_header p{
color:block;
font-size:24rpx;
margin-left:20rpx;
margin-top:10rpx;
}
.apply_kol_header p:last-child{
float:right;
margin-right:20rpx;
color:gray;
}
.icon_wrap{
width:95%;
height:auto;
display:flex;
flex-wrap:wrap;
margin:20rpx auto;
padding-top:20rpx;
min-height:150px;
border-top: 1rpx solid rgb(243, 239, 239)
}
.icon{
  width: 50rpx;
  height: 50rpx;
  padding-left:5rpx;
}
.image{
width:50rpx;
height:50rpx;
border-radius:50%;
}
.clear{
  width: 100%;
  height: 150rpx;
}
/* 分享 */
.share {
width:100%;
height:120rpx;
position:fixed;
left:0;
bottom:0;
display:flex;
background-color:#f0f0f4;
justify-content:space-between;
}
button::after{ border: none; }
.share_ewm{
height:120rpx;
line-height:145rpx;
width:50%;
background:#f0f0f4;
text-align:center;
}
.share_ewm image{
width:56rpx;
height:56rpx;
margin-left:-56rpx;
}
.share_word{
font-size:24rpx;
position:absolute;
margin-top:-2%;
}
.skill{
font-size:24rpx;
}
.detailed {
padding-top:20rpx;
margin:0 auto;
padding-left:10rpx;
}
.detailed p{
  margin-top:20rpx;
  font-size:28rpx;
}
.detailed_content{
border-bottom:0.5px solid rgb(243, 239, 239);
border-top:0.5px solid rgb(243, 239, 239);
height:auto;
min-height:120px;
margin-top:20rpx;
padding:10rpx 10rpx;
}
.share_fx_color{
margin-top:-5%;
color:black;
}