page {
  background-color: #fff;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.name {
height:100rpx;
line-height:100rpx;
margin:0rpx auto;
border-bottom:1px solid rgb(247, 247, 247);
font-size:24rpx;
padding-left:45rpx;

}

.name p {

  height:100rpx;
  font-size:26rpx;
  float:left;
}

.platform span {
font-size:24rpx;
float:right;
padding-right:45rpx;

}


.field span{
  margin-left: 10rpx;
}

.city span {
  font-size: 24rpx;
  margin-left: 20rpx;
}

.input_common {
float:right;
height:100rpx;
line-height:100rpx;
font-size:24rpx;
text-align:right;
padding-right:45rpx;
width:70%;

}
.follow_picker{
  float:right;
  margin-right:45rpx;
}
.picker_num{
  float:right;
  width:15%;
  text-align:center;
}
.introduction{
height:100rpx;
line-height:100rpx;
font-size:28rpx;
margin:0rpx auto;
padding-left:45rpx;
}
.in_intro{
  width: 90%;
  margin: 0rpx auto;
  border:1px solid rgb(247, 247, 247);
  min-height: 100rpx;
  max-height: 150rpx;
  outline: 0;
  font-size: 24rpx;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-user-modify: read-write-plaintext-only;
}
.footer{
color:#FF3300;
position:fixed;
width:100%;
bottom:0;
z-index:100000;

}
.footer button{
  background-color:#FF3300 !important;
  border-radius: 0 !important;
}
.wux-accordion__hd{
  padding:30rpx 45rpx !important;
}
.phcolor{
  color: #FF3300
}
.ux-accordion__arrow{
  padding-right:45rpx;
}

.territory{
border-bottom:0.5px solid rgb(247, 247, 247);
text-align:center;
padding-left:30rpx;
color:gray;
font-size:21rpx;
display:flex;
flex-wrap: wrap;
padding-right:30rpx;
padding-top:20rpx;

}
.territory p{
margin:10rpx;
width:21%;
border:1rpx solid rgb(247, 247, 247);
color:gray;
height:50rpx;
line-height:50rpx;
border-radius:10rpx;


}
.tag{
  font-size:26rpx;
  margin-left:45rpx;
}

.check{
  /* background:#FF3300 !important; */
  color:#FF3300 !important;
  border:1rpx solid #FF3300 !important;
  
}

.name button::after{ border: none; }
/* 实现textarea高度自适应 */
.detail-view {

position:relative;
margin:0rpx 20rpx;
min-height:200rpx;
border:1rpx solid rgb(247, 247, 247);
padding-left:10rpx 10rpx;

}
.detail-placeholder {
position:absolute;
padding:10rpx 20rpx;
min-height:100%;
color:#c9c9c9;
font-size:28rpx;
}
.detail-textarea {
  top: 12rpx;
  width: 100%;
  font-size: 28rpx;
  padding-left:20rpx;

}