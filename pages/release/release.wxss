page {
  background-color: #fff;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.name {
height:100rpx;
line-height:100rpx;
margin:0rpx auto;
border-bottom:1px solid lightgray;
font-size:24rpx;
padding-left:45rpx;
}

.name p {

  height:100rpx;
  font-size:26rpx;
  float:left;
}

.platform span {
font-size:24rpx;
float:right;
padding-right:45rpx;

}


.field span{
  margin-left: 10rpx;
}

.city span {
  font-size: 24rpx;
  margin-left: 20rpx;
}

.input_common {
float:right;
height:100rpx;
line-height:100rpx;
font-size:24rpx;
text-align:right;
padding-right:45rpx;
}
.follow_picker{
  float:right;
  margin-right:45rpx;


}
.introduction{
  width: 90%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  margin: 0rpx auto;
}
.in_intro{
  width: 90%;
  height: 300rpx;
  margin: 0rpx auto;
  border:1px solid gray;
}
.footer{
  margin-top: 30rpx;
}
.wux-accordion__hd{
  padding:30rpx 45rpx !important;
}
.wux-cell--access .wux-cell__ft{
  padding-right:45rpx !important;
}
.ux-accordion__arrow{
  padding-right:45rpx;
}

.territory{

border-bottom:0.5px solid lightgray;
text-align:center;
padding-left:30rpx;
color:gray;
font-size:21rpx;
display:flex;
flex-wrap: wrap;
padding-right:30rpx;

}
.territory p{

margin:20rpx 20rpx;
width:18%;
border:1rpx solid lightgray;
color:gray;
}
.tag{
  font-size:26rpx;
  margin-left:45rpx;
}
.check{
  border:1rpx solid #666666 !important;
}