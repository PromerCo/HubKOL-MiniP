<view class="wrap" hidden="{{!loadingHidden}}">
  <!-- 第一部分 产品要求-->
  <view class="content">
    <view class="head">
      <view class="all">
        <view class="top_left margin_top">
          <image src="../../imgs/icon/sys-address.png"></image>
          <p>{{list.city}}</p>
        </view>
        <view class=" bottom_left margin_bottom">
          <image src="../../imgs/icon/icon_follow.png"></image>
          <p>{{list.mcn_organization}}</p>
        </view>
      </view>
      <view class="all">
        <view class=" top_center">
          <image src="{{list.avatar_url}}"></image>
        </view>
        <view class=" bottom_center">
          <span>{{list.nick_name}}</span>
        </view>
      </view>
      <view class="all">
        <view class=" top_right margin_top">
          <image src="../../imgs/icon/ant_design.png"></image>
          <p>{{list.title}}</p>
        </view>
        <view class=" bottom_right margin_bottom">
          <image src="../../imgs/icon/tags.png"></image>
            <p class="tages_title">
             <span wx:for="{{list.tages}}" >#{{item.title}}</span> 
            </p>
        </view>
      </view>
    </view>
    <view class='detailed'>
      <p>简介</p>
       <view class="container_s" style="height:auto;">
<editor
  id="editor"
  class="ql-container"
  placeholder="{{placeholder}}"
  showImgSize
  showImgToolbar
  showImgResize
  bindstatuschange="onStatusChange"
  read-only="{{readOnly}}"
  bindfocus="bindfocus"
  bindinput="bindinput"
  bindready="onEditorReady"  selectable="true" >
</editor>


<view class="toolbar" catchtouchend="format" hidden="{{keyboardHeight > 0 ? false : true}}"  style="bottom: {{isIOS ? keyboardHeight : 0}}rpx">
  <i class="iconfont icon-charutupian" catchtouchend="insertImage"></i>
  <i class="iconfont icon-format-header-2 {{formats.header === 2 ? 'ql-active' : ''}}" data-name="header" data-value="{{2}}"></i>
  <i class="iconfont icon-format-header-3 {{formats.header === 3 ? 'ql-active' : ''}}" data-name="header" data-value="{{3}}"></i>
  <i class="iconfont icon-zitijiacu {{formats.bold ? 'ql-active' : ''}}" data-name="bold"></i>
  <i class="iconfont icon-zitixieti {{formats.italic ? 'ql-active' : ''}}" data-name="italic"></i>
  <i class="iconfont icon-zitixiahuaxian {{formats.underline ? 'ql-active' : ''}}" data-name="underline"></i>
  <i class="iconfont icon--checklist" data-name="list" data-value="check"></i>
  <i class="iconfont icon-youxupailie {{formats.list === 'ordered' ? 'ql-active' : ''}}" data-name="list" data-value="ordered"></i>
  <i class="iconfont icon-wuxupailie {{formats.list === 'bullet' ? 'ql-active' : ''}}" data-name="list" data-value="bullet"></i>
</view>


    </view>


    </view>
    <view class='apply_kol'>
      <view class='apply_kol_header'>
        <p>已邀请KOL</p>
        <p>
          <span>{{follow_number}}关注 / {{invite_number}}邀请</span>
        </p>
      </view>
      <view class="icon_wrap">
        <view class="icon" wx:for='{{invite}}' wx:for-index='index' wx:for-item="item">
          <image src="{{item.avatar_url}}" class="image"></image>
        </view>
      </view>
    </view>
  </view>
</view>
  <!-- 固定定位 -->
  <view class="share">

    <!-- <button open-type='share' class="share_ewm">
      <image src="../../imgs/icon/fx.png"></image>
      <span class="share_word share_fx_color"> 分享 </span>
    </button> -->


    <view class="share_ewm">
      <view catchtap='navCategory'>
        <image src="../../imgs/toolbar/sms@-kol.png"></image>
        <span class="share_word share_sq_color"> KOL </span>
      </view>
    </view>


    <view class="share_ewm">
      <view catchtap='concern' data-user_id="{{list.user_id}}" data-status="{{status}}">
        <image src="../../imgs/icon/sms-gzhu.png"></image>
        <span class="share_word share_sq_color"> {{follow}} </span>
      </view>
    </view>
    
    <view class="share_ewm">
      <view catchtap='invite' data-kol_id="{{list.id}}">
        <image src="../../imgs/icon/sms-yaoqing.png"></image>
        <span class="share_word share_sq_color"> {{replace}} </span>
      </view>
    </view>


  </view>

  <loading hidden="{{loadingHidden}}">
    加载中...
  </loading>